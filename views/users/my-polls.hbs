<h1 class="text-center">My Polls</h1>

<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        {{# if polls }}
            <ul class="list-group">
                {{# each polls}}
                    <li class="list-group-item">
                        <a href="/polls/{{this._id}}">{{this.question}}</a>
                        <a href="/polls/{{this._id}}/delete" class="btn btn-danger btn-xs pull-right">Delete</a>

                    </li>

                {{/each}}
            </ul>
        {{else}}
            <br>
            <p class="text-center">There doesn't seem to be anything here. Try <a href="/polls/create">creating a poll</a>.</p>
        {{/if}}
    </div>
</div>